<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageProfilePhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/textProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="correo@ejemplo.com"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textPreferencesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferencias de belleza"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textProfileSkinType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de piel: "
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textProfileHairType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de cabello: "
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación actual: desconocida"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/buttonGetLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obtener ubicación"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar perfil"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/buttonViewProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver productos"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/buttonManageUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestionar usuarios (admin)"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
