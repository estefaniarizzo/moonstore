<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp">

    <!-- Nombre del producto -->
    <TextView
        android:id="@+id/textCartProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Producto"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginEnd="8dp"/>

    <!-- Botón disminuir cantidad -->
    <ImageButton
        android:id="@+id/buttonDecrease"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_media_previous"
        android:contentDescription="Disminuir cantidad"
        android:background="@android:color/transparent"/>

    <!-- Cantidad -->
    <TextView
        android:id="@+id/textCartQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16sp"
        android:padding="8dp"/>

    <!-- Botón aumentar cantidad -->
    <ImageButton
        android:id="@+id/buttonIncrease"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_media_next"
        android:contentDescription="Aumentar cantidad"
        android:background="@android:color/transparent"/>

    <!-- Botón eliminar -->
    <ImageButton
        android:id="@+id/buttonDeleteFromCart"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Eliminar del carrito"
        android:background="@android:color/transparent"
        android:layout_marginStart="8dp"/>

</LinearLayout>
